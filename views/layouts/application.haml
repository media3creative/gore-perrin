  %body{:class => @body_class}
    = yield :background
    #header
      #logo1
        %a{:href => @link1[1]}
          %img{:src => "/images/logo.png", :alt => ""+@sitename+" Logo"}
      %ul#topnav
        %li
          %a#one.topnav{:href => @link1[1]}
            =@link1[0]
        %li
          %a#two.topnav{:href => @link2[1]}
            =@link2[0]
        %li
          %a#three.topnav{:href => @link3[1]}
            =@link3[0]
